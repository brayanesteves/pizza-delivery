<section id="list-products" class="list-products">

    <div class="container">
        <div class="row">

            {{#each cmds}}
            <div class="col-md-3">

                <div class="card">
                    <div class="top-section">
                        <!--  <IMAGÃ‰N PRINCIPAL>  -->
                        <img id="image-container" src="{{Imgn}}" alt="">
                        <div class="price_dolar">{{Prc_Dlrs}}</div>
                        <div class="price_euro">{{Prc_Ers}}</div>
                    </div>

                    <div class="product-info">
                        <div class="name">{{NmbrCmd}}</div>
                        <div class="dis">{{Dtlls}}</div>
                        <a id="add-to-cart" class="btn add-to-cart" href="/cmds/add/{{ Rfrnc }}">Add to Cart</a>
